{
  "tasksRunnerOptions": {
    "default": {
      "runner": "nx/tasks-runners/default",
      "options": {
        "cacheableOperations": [
          "build",
          "test"
        ]
      }
    }
  },
  "namedInputs": {
    "all": ["{projectRoot}/**/*"],
    "public": ["!{projectRoot}/**/*/*.test.*"]
  },
  "targetDefaults": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "inputs": ["public", "^public"],
      "outputs": [
        "{projectRoot}/lib"
      ]
    },
    "test": {
      "dependsOn": ["build"],
      "inputs": ["all", "^public"]
    },
    "start": {
      "dependsOn": ["^build", "build"],
      "inputs": ["all"]
    },
    "start:dev": {
      "dependsOn": ["^build"],
      "inputs": ["all"]
    }
  }
}
